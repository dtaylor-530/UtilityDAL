<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:UtilityDAL.DemoApp">

    <DataTemplate DataType="{x:Type local:Price}">
        <UniformGrid Columns="1" Background="Transparent" MinWidth="50">
            <TextBlock Text="{Binding Date}"></TextBlock>
            <TextBlock Text="{Binding Bid}"></TextBlock>
            <TextBlock Text="{Binding Offer}"></TextBlock>
        </UniformGrid>
    </DataTemplate>
</ResourceDictionary>